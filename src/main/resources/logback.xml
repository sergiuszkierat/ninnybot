<?xml version="1.0" encoding="UTF-8" ?>

<configuration debug="false">

    <appender name="APPENDER_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5p [%X{userName}%X{msisdn}] [%thread] [%logger{0}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sergiuszkierat">
        <level value="INFO"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="APPENDER_CONSOLE"/>
    </root>

</configuration>
